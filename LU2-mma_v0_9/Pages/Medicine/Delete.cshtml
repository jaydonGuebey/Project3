@page "{id:int}"
@model Pages.Medicine.DeleteModel
@{
    ViewData["Title"] = "Delete Medicine";
}

<h1>Delete Medicine</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Medicine</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Medicine.MedicineID</dd>
        <dt class="col-sm-2">Trade Name</dt>
        <dd class="col-sm-10">@Model.Medicine.TradeName</dd>
        <dt class="col-sm-2">Active Substances</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.Medicine.ActiveSubstances)</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Medicine.MedicineID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
